{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "jsx": "preserve",
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/": ["src/"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
}